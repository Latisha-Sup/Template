{
  "name": "express.ts",
  "version": "0.0.1",
  "description": "An express.ts project",
  "main": "src/index.ts",
  "scripts": {
    "tsc": "tsc",
    "dev": "ts-node-dev --respawn ./src/server.ts",
    "prod": "tsc && eslint '*/**/*.{js,ts,tsx}' --quiet --fix && node ./build/server.js",
    "start": "node ./build/server.js",
    "build": "tsc && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "jest --detectOpenHandles"
  },
  "author": "inon",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}